<%- include('../../includes/head', { title: 'Materijali | Otvoreno raƒçunarstvo' }) %>

<main class="subject-page">
    <%- include('../../includes/navigation', { active: 'otvoreno-racunarstvo' }) %>

    <section class="subject-hero subject-hero--small">
        <div class="container">
            <h1 class="subject-title">Materijali za preuzimanje</h1>
            <p class="subject-subtitle">
                Prezentacije su dostupne u skladu sa planom nastave
            </p>
        </div>
    </section>

    <section class="section">
        <div class="container">

            <hr class="section-divider">

            <% if (!materials || materials.length === 0) { %>

                <div class="empty-state">
                    <div class="empty-state-icon">üìÇ</div>
                    <p class="empty-state-title">Nema dostupnih materijala</p>
                    <p class="empty-state-small">
                        Materijali ƒáe biti objavljeni tokom semestra.
                    </p>
                </div>

            <% } else { %>

                <% materials.forEach(item => { %>

                    <div class="card <%= item.available ? '' : 'card--muted' %>">

                        <!-- HEADER -->
                        <div class="card-header">
                            <strong>
                                <% if (item.week === 0) { %>
                                    Uvod
                                <% } else { %>
                                    Nedelja <%= item.week %>
                                <% } %>
                            </strong>

                            <span>
                                <% if (item.available) { %>
                                    ‚úÖ Dostupno
                                <% } else { %>
                                    üîí Zakljuƒçano
                                <% } %>
                            </span>
                        </div>

                        <!-- BODY -->
                        <div class="card-body">
                            <h3><%= item.title %></h3>
                            <p>üìÖ <%= item.formattedDate %></p>
                        </div>

                        <!-- FOOTER -->
                        <div class="card-footer">
                            <% if (item.available) { %>
                                <a
                                    href="<%= item.downloadPath %>"
                                    class="btn btn--primary"
                                    download
                                >
                                    ‚¨á Preuzmi PDF
                                </a>
                            <% } else { %>
                                <button class="btn btn--disabled" disabled>
                                    Dostupno od <%= item.formattedDate %>
                                </button>
                            <% } %>
                        </div>

                    </div>

                <% }) %>

            <% } %>

        </div>
    </section>
</main>

<%- include('../../includes/end') %>